<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Page</title>
    <script src="https://cdn.tailwindcss.com"></script>  
</head>
<body>
   <div class="main w-full min-h-screen bg-zinc-900">
        <!-- Form to Create User -->
        <div class="form p-10 text-white text-center">
            <form action="/create-user" method="GET">
                <input class="inline-block w-1/4 rounded-md outline-none px-5 py-2 bg-zinc-800" 
                       type="text" placeholder="Enter your Name" name="user" required>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create User">
            </form>
        </div>

        <!-- User List -->
        <div class="tasks p-10 flex gap-3 flex-wrap"> 
            <% if(user.length > 0) { %>
                <% user.forEach(function(val){ %>
                    <div class="task min-w-72 rounded-md px-3 py-4 bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>    
                        <div class="flex w-full justify-between items-center mt-3 text-sm">
                            <a class="text-blue-400" href="/create-task-user/<%= val %>">Open</a>
                            <a class="text-yellow-400" href="/edit-user/<%= val %>">Edit</a>
                            <a class="text-red-500" href="/delete-user/<%= val %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">No User yet...</h3>
            <% } %>
        </div>
   </div>
</body>
</html>
